[Mount]
What=/mnt/data/*
Where=/pool
Type=fuse.mergerfs
Options=defaults,allow_other,use_ino,category.create=eplfs,moveonenospc=true,minfreespace=20G,fsname=mergerfsPool

[Install]
RequiredBy=local-fs.target

